---
import Main from "@/layouts/Main.astro";
import Footer from "@/components/navigation/footer";
import { Button } from "@/components/ui/button";
import Navbar from "@/components/navigation/navbar";
import {
  InstagramIcon,
  TwitterIcon,
  GithubIcon,
  LinkedinIcon,
} from "lucide-react";
---

<Main title="Jalu Satriani Wijaya">
  <Navbar client:load/>
  <header class="py-32">
    <div class="container mx-auto">
      <div class="prose">
        <h1 class="text-uppercase mb-0 text-6xl">JALU SATRIANI WIJAYA</h1>
        <p class="mt-4 text-2xl">Software Engineer</p>
        <p class="mt-4 leading-loose">
          Jalu is an Indonesian software engineer, proficient in Full Stack Web
          Development, with over two years of experience in building full-stack
          web and multi-platform applications. He is passionate about building
          software solutions that genuinely help others.
        </p>
        <Button size="lg">Reach Me</Button>
      </div>
      <div class="mt-20 flex justify-end space-x-6">
        <a
          href="https://instagram.com/jalusw"
          target="_blank"
          title="instagram"
        >
          <InstagramIcon />
        </a>
        <a href="https://github.com/jalusw" target="_blank" title="github">
          <GithubIcon />
        </a>
        <a href="https://x.com/jalusw" target="_blank" title="twitter">
          <TwitterIcon />
        </a>
        <a
          href="https://linkedin.com/in/jalusw"
          target="_blank"
          title="linkedin"
        >
          <LinkedinIcon />
        </a>
      </div>
    </div>
  </header>
  <main id="main"></main>
  <Footer />
</Main>
