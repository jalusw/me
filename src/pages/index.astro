---
import Main from "@/layouts/Main.astro";
import Navbar from "@/components/navigation/navbar";
import Footer from "@/components/navigation/footer";
import {
  GithubIcon,
  InstagramIcon,
  LinkedinIcon,
  TwitterIcon,
} from "lucide-react";
---

<Main
  title="Jalu Satriani Wijaya"
  description="Full-stack engineer specializing in building scalable web and mobile applications using React, Node.js, Go, and Flutter. Experienced in microservices, real-time systems, and cloud technologies. Explore my portfolio or get in touch!"
>
  <Navbar client:load />
  <header class="py-40">
    <div class="container max-w-screen-lg">
      <div class="">
        <h1 class="text-uppercase mb-0 text-6xl font-bold">
          Jalu Satriani Wijaya
        </h1>
        <p class="mt-4 text-2xl">Software Engineer</p>
        <p class="mt-4 max-w-[66ch] leading-loose">
          A software engineer with 2+ years of experience in full-stack web and
          multi-platform development, dedicated to create impactful software
          solutions.
        </p>
      </div>
    </div>
  </header>
  <main id="main">
    <section class="py-28">
      <div class="container max-w-screen-lg">
        <div class="prose dark:prose-invert">
          <h2 class="text-4xl font-bold">Hi, There !</h2>
          <p class="leading-loose">
            I'm jalu satriani wijaya, a software engineer based in Indonesia. I
            have a passion for software development and love to build things
            that solve real-world problems using cutting edge technologies.
          </p>
        </div>
      </div>
    </section>
    <section class="py-28">
      <div class="container max-w-screen-lg">
        <div class="prose dark:prose-invert">
          <h2 class="text-4xl font-bold">Reach Me</h2>
          <p>
            I'm always open to new opportunities and collaborations. If you have
            a project in mind or just want to say hi, feel free to reach out to
            me. ^^
          </p>
          <ul class="m-0 list-none p-0">
            <li class="m-0 flex flex-col gap-x-8 gap-y-4 p-0 md:flex-row">
              <a
                class="flex items-center gap-x-2"
                href="https://instagram.com/jalusw"
                target="_blank"
                rel="nofollow noopener"
              >
                <InstagramIcon />
                <span> jalusw </span>
              </a>
              <a
                class="flex items-center gap-x-2"
                href="https://x.com/jalusw"
                target="_blank"
                rel="nofollow noopener"
              >
                <TwitterIcon />
                <span> @jalusw </span>
              </a>
              <a
                class="flex items-center gap-x-2"
                href="https://github.com/jalusw"
                target="_blank"
                rel="nofollow noopener"
              >
                <GithubIcon />
                <span> jalusw </span>
              </a>

              <a
                class="flex items-center gap-x-2"
                href="https://linkedin.com/in/jalusw"
                target="_blank"
                rel="nofollow noopener"
              >
                <LinkedinIcon />
                <span> in/jalusw </span>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Main>
